	<div class="form-group"><label></label><input type="text" name="director" placeholder="director"></div>
	<div class="form-group"><label>Summary:</label><textarea rows="10" cols="50" name="summary"></textarea></div>
	<div class="form-group"><label></label><input type="text" name="release" placeholder="release"></div>
	<div class="form-group"><label></label><input type="text" name="duration" placeholder="duration"></div>
	<div class="form-group"><label></label><input type="text" name="ratings" placeholder="ratings"></div>
